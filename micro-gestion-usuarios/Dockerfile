FROM openjdk:17-jdk-buster
VOLUME /tmp
EXPOSE 8081
ARG JAR_FILE=target/micro-gestion-usuarios-spring-boot.jar
ADD ${JAR_FILE} app.jar


ARG MCT_DBHOST
ARG MCT_DBNAME
ARG MCT_DBPORT
ARG MCT_DBPWD
ARG MCT_DBUSER

ENV MCT_DBHOST=$MCT_DBHOST
ENV MCT_DBNAME=$MCT_DBNAME
ENV MCT_DBPORT=$MCT_DBPORT
ENV MCT_DBPWD=$MCT_DBPWD
ENV MCT_DBUSER=$MCT_DBUSER


ENTRYPOINT ["java","-jar","/app.jar"]